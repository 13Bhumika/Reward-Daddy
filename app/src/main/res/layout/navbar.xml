<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_home"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/ic_home"
            android:layout_gravity="center"
            android:contentDescription="Home icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:fontFamily="@font/raleway_regular"
            android:textColor="#2684FF"
            android:textFontWeight="500"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_discover"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/ic_discover"
            android:layout_gravity="center"
            android:contentDescription="Discover icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discover"
            android:fontFamily="@font/raleway_regular"
            android:textColor="#B9B9B9"
            android:textFontWeight="500"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_leaderboard"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/ic_leaderboard"
            android:layout_gravity="center"
            android:contentDescription="Leaderboard icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leaderboard"
            android:fontFamily="@font/raleway_regular"
            android:textColor="#B9B9B9"
            android:textFontWeight="500"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_achievement"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/ic_achievement"
            android:layout_gravity="center"
            android:contentDescription="Achievement icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Achievement"
            android:fontFamily="@font/raleway_regular"
            android:textColor="#B9B9B9"
            android:textFontWeight="500"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>
