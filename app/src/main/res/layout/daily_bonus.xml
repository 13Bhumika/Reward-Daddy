<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    >

    <TextView
        android:id="@+id/tv_bonus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily Bonus"
        android:textSize="12sp"
        android:fontFamily="@font/raleway_regular"
        android:textStyle="bold"
        android:layout_marginHorizontal="15dp"
        android:textColor="@color/black"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="5dp"
        android:padding="15dp"
        android:background="@drawable/daily_bonus_background">

        <TextView
            android:id="@+id/tv_claim"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="Claim Your Bonus"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/raleway_regular"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:text="Come back every day for more rewards"
            android:textSize="10sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:fontFamily="@font/raleway_regular"
            app:layout_constraintTop_toBottomOf="@id/tv_claim"
            app:layout_constraintStart_toStartOf="parent"
            />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_bonus"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>